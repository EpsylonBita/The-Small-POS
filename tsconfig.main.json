{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "./dist/main"
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/renderer/**/*"
  ]
}