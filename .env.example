# POS System Environment Configuration
NODE_ENV=development

# Admin Dashboard API Configuration
# These URLs are now obtained EXCLUSIVELY from the connection string during terminal pairing.
# Do NOT set these env vars - they will be ignored. The URL in the connection string is the only source.
# ADMIN_DASHBOARD_URL=
# ADMIN_API_BASE_URL=

# Terminal Configuration
# These values are configured via connection string in the POS Settings.
# Do NOT hardcode terminal credentials here - they will override connection string settings!
# TERMINAL_ID= (set via connection string)
# POS_API_KEY= (set via connection string)
# POS_API_SHARED_KEY= (set via connection string)

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Payment Configuration
PAYMENT_MODE=test
PAYMENT_TEST_CARDS_ENABLED=true

# Payment Gateway (Production - leave empty for test mode)
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_API_SECRET=
PAYMENT_GATEWAY_MERCHANT_ID=
PAYMENT_GATEWAY_ENDPOINT=https://api.stripe.com/v1

# Development Features
USE_MOCK_DATA=false
DEBUG_LOGGING=true
