# POS System Environment Configuration
NODE_ENV=development

# Admin Dashboard API Configuration
ADMIN_DASHBOARD_URL=http://localhost:3001
ADMIN_API_BASE_URL=http://localhost:3001/api
# POS Orders API auth (required for /api/pos/orders)
# Use per-terminal POS_API_KEY when available (preferred). Fallback to POS_API_SHARED_KEY for legacy.
TERMINAL_ID=terminal-001
POS_API_KEY=
POS_API_SHARED_KEY=

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Payment Configuration
PAYMENT_MODE=test
PAYMENT_TEST_CARDS_ENABLED=true

# Payment Gateway (Production - leave empty for test mode)
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_API_SECRET=
PAYMENT_GATEWAY_MERCHANT_ID=
PAYMENT_GATEWAY_ENDPOINT=https://api.stripe.com/v1

# Development Features
USE_MOCK_DATA=false
DEBUG_LOGGING=true
