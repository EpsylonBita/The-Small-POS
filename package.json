{
  "name": "the-small-pos-tauri",
  "private": true,
  "version": "1.2.0",
  "description": "The Small POS - Tauri v2 desktop application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "parity:contract": "node scripts/check-parity-contract.mjs",
    "pos:tauri:dev": "node scripts/check-dev-port.mjs && cross-env CARGO_BUILD_JOBS=1 RUSTFLAGS=-Cdebuginfo=0 tauri dev",
    "pos:tauri:build": "tauri build",
    "pos:tauri:build:win": "tauri build --target x86_64-pc-windows-msvc",
    "pos:tauri:bundle:win": "tauri build --target x86_64-pc-windows-msvc --bundles nsis",
    "pos:tauri:manifest": "node scripts/generate-updater-manifest.mjs",
    "pos:tauri:verify": "tsc --noEmit && vite build && bash scripts/verify-rust.sh && npm run parity:contract",
    "pos:tauri:verify:win": "tsc --noEmit && vite build && powershell -ExecutionPolicy Bypass -File scripts/verify-rust.ps1 && npm run parity:contract"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-notification": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.0.0",
    "framer-motion": "12.23.24",
    "i18next": "^23.12.0",
    "dompurify": "^3.3.1",
    "lucide-react": "^0.427.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^15.0.0",
    "react-router-dom": "^6.30.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "2.2.3",
    "recharts": "^2.15.3",
    "uuid": "^11.1.0",
    "zod": "^4.2.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "5.8.3",
    "vite": "^6.0.0"
  }
}
